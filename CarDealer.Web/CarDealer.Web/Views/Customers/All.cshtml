@model AllCustomersModel

@{
    ViewData["Title"] = "All Customer";
}

<h2>@ViewData["Title"]</h2>
<h3>Ordered in @Model.OrderDirection.ToString().ToLower() direction</h3>

<table class="table table-bordered table-hover ">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                BirthDay
            </th>
            <th>
                Is Young Driver
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
        <tr>
            <td>
                @customer.Name
            </td>
            <td>
                @customer.BitrhDay.ToShortDateString()
            </td>
            <td>
                @(customer.IsYoungDriver ? "Yes" : "No" )  
            </td>
        </tr>
        }



    </tbody>



</table>
